<mvc:View controllerName="catalog.view.Detail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiSizeCompact" id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}">
		<headerContent> 
			<!--<Toolbar id="detailToolba2r">-->
			<!--	<content>-->
					<Button icon="sap-icon://action" id="addButton2" press="onAddBenefit" text="Go to My benefits" ></Button>
			<!--	</content>-->
			<!--</Toolbar>	-->
	</headerContent>
		<content>
			<ObjectHeader icon="{Icon}" iconActive="false" id="detailHeader" introActive="false" number="{Fcat/BUDGET}" numberUnit="Units in balance"
				title="{BenDes}" titleActive="false">
				<attributes id="detailAttributes">
					<ObjectAttribute active="false" id="attribute" text="Open from {Fcat/BEGDA} until {Fcat/ENDDA}"></ObjectAttribute>
				</attributes>
				<firstStatus id="detailStatus">
					<ObjectStatus id="status" text=""></ObjectStatus>
				</firstStatus>
			</ObjectHeader>
			<IconTabBar expanded="{device>/isNoPhone}" id="idIconTabBar" select="handleTabSelect">
				<items id="detailsItems">
					<IconTabFilter design="Horizontal" icon="sap-icon://inspection" id="iconTabFilter1" key="tab1" text="Information" textDirection="LTR">
						<content>
							<form:SimpleForm id="AppraisersForm" minWidth="1024px">
								<HBox alignItems="Stretch" direction="Row" displayInline="false" fitContainer="false" height="100%" id="idhor" justifyContent="Start"
									renderType="Div" visible="true" width="1024px" xmlns="sap.m">
									<tooltip></tooltip>
									<dependents></dependents>
									<items>
										<layout:VerticalLayout enabled="true" id="idverto" visible="true" width="100%" xmlns="sap.ui.layout">
											<content>
												<Text id="text1" text="{Info}" xmlns="sap.m"/>
											</content>
										</layout:VerticalLayout>
									</items>
								</HBox>
							</form:SimpleForm>
						</content>
					</IconTabFilter>
					<IconTabFilter design="Horizontal" icon="sap-icon://approvals" id="iconTabFilter2" key="tab2" text="Enrollment" textDirection="LTR">
						<content>
							<l:Grid idclass="sapUiSmallMarginTop" defaultSpan="L6 M6 S10" hSpacing="2">
								<l:content>
									<VBox width="100%">
										<Input change="onInputChange" class="sapUiSmallMarginBottom" description="Units" fieldWidth="80%" id="idInput" value="{Fcat/AMTEMPLOYEE}"
											width="100%"/>
										<Slider change="onSliderChange" id="idSlider" max="{Fcat/AMTMAX}" min="{Fcat/AMTMIN}" value="{Fcat/AMTEMPLOYEE}" width="100%"/>
									</VBox>
									<layout:VerticalLayout class="valueBlock" enabled="true" id="idverto1" visible="true" width="100%" xmlns="sap.ui.layout">
										<content>
											<VBox class="sapMObjectNumber" id="stuff" width="100%" xmlns="sap.m">
												<Text class="valueInput" id="options" text="328" xmlns="sap.m"/>
												<Text class="valueUnit" id="text3" text="Options" xmlns="sap.m"/>
											</VBox>
											<Text class="valueDesc" id="text4" text="10 Euro / Option" xmlns="sap.m"/>
											<Text class="valueOutput" id="valorization" text="{Fcat/VALORIZATION}" xmlns="sap.m"/>
											<Text class="valueUnit" id="text6" text="Euro" xmlns="sap.m"/>
											<Text id="amtinv" fieldGroupIds="[TestGroup]" text="{Fcat/AMTEMPLOYEE}" visible="false" xmlns="sap.m"/>
											<Text id="valinv" fieldGroupIds="[TestGroup]" text="{Fcat/VALORIZATION}" visible="false" xmlns="sap.m"/>
											<Text id="cosinv" fieldGroupIds="[TestGroup]" text="{Fcat/VALUCOS}" visible="false" xmlns="sap.m"/>
										</content>
									</layout:VerticalLayout>
								</l:content>
							</l:Grid>
						</content>
					</IconTabFilter>
					<core:ExtensionPoint name="extIconTabFilter"/>
				</items>
			</IconTabBar>
		</content>
		<footer id="detailFooter">
			<Toolbar id="detailToolbar">
				<content>
					<ToolbarSpacer id="toolbarSpacer"></ToolbarSpacer>
					<Button class="addToMyBen" icon="sap-icon://add-favorite" id="addButton" press="onAddBenefit" text="Add to My benefits" visible="false"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>