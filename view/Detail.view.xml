<mvc:View controllerName="catalog.view.Detail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiSizeCompact" id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}">
		<content>
			<ObjectHeader icon="{Icon}" iconActive="false" id="detailHeader" introActive="false" number="{Fcat/UNIT_BUD}" numberUnit="Units in balance"
				title="{BenDes}" titleActive="false">
				<attributes id="detailAttributes">
					<ObjectAttribute active="false" id="attribute" text="Open from 01.01.2016 until 18.12.2016"></ObjectAttribute>
				</attributes>
				<firstStatus id="detailStatus">
					<ObjectStatus id="status" text=""></ObjectStatus>
				</firstStatus>
			</ObjectHeader>
			<IconTabBar expanded="{device>/isNoPhone}" id="idIconTabBar" select="handleTabSelect">
				<items id="detailsItems">
					<IconTabFilter design="Horizontal" icon="sap-icon://inspection" id="iconTabFilter1" key="tab1" text="Information" textDirection="LTR">
						<content>
							<form:SimpleForm id="AppraisersForm" minWidth="1024px">
								<HBox alignItems="Stretch" direction="Row" displayInline="false" fitContainer="false" height="100%" id="idhor" justifyContent="Start"
									renderType="Div" visible="true" width="1024px" xmlns="sap.m">
									<tooltip></tooltip>
									<dependents></dependents>
									<items>
										<layout:VerticalLayout enabled="true" id="idverto" visible="true" width="100%" xmlns="sap.ui.layout">
											<content>
												<Text id="text1" text="{Info}" xmlns="sap.m"/>
											</content>
										</layout:VerticalLayout>
									</items>
								</HBox>
							</form:SimpleForm>
						</content>
					</IconTabFilter>
					<IconTabFilter design="Horizontal" icon="sap-icon://approvals" id="iconTabFilter2" key="tab2" text="Enrollment" textDirection="LTR">
						<content>
							<l:Grid binding="{/PersonCollection}" class="sapUiSmallMarginTop" defaultSpan="L6 M6 S10" hSpacing="2">
								<l:content>
									<VBox width="100%">
										<Input id="idInput" class="sapUiSmallMarginBottom" description="Units" fieldWidth="80%" value="0" width="100%" change="onInputChange"/>
										<Slider id="idSlider" value="0" width="100%" change="onSliderChange"  min="0" max="100"/>
									</VBox>
										<layout:VerticalLayout enabled="true" id="idverto1" visible="true" width="100%" xmlns="sap.ui.layout" class="valueBlock">
											<content>
									<VBox id="stuff" xmlns="sap.m" width="100%" class="sapMObjectNumber">
											<Text id="text2" text="328" xmlns="sap.m" class="valueInput"/>
											<Text id="text3" text="Options" xmlns="sap.m" class="valueUnit"/>
									</VBox>	
											<Text id="text4" text="10 Euro / Option" xmlns="sap.m" class="valueDesc"/>
											<Text id="text5" text="3.280" xmlns="sap.m" class="valueOutput"/>
											<Text id="text6" text="Euro" xmlns="sap.m" class="valueUnit"/>
											</content>
										</layout:VerticalLayout>
								</l:content>
							</l:Grid>
						</content>
					</IconTabFilter>
					<core:ExtensionPoint name="extIconTabFilter"/>
				</items>
			</IconTabBar>
		</content>
		<footer id="detailFooter">
			<Toolbar id="detailToolbar">
				<content>
					<ToolbarSpacer id="toolbarSpacer"></ToolbarSpacer>
					<Button class="addToMyBen" icon="sap-icon://add-favorite" id="addButton" press="openActionSheet" text="Add to My benefits" visible="false"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>